# ===========================================
# NCP 인증 정보 (필수)
# ===========================================
# NCP 콘솔 → 마이페이지 → 계정 관리 → 인증키 관리
access_key = "YOUR_ACCESS_KEY"
secret_key = "YOUR_SECRET_KEY"

# ===========================================
# 리전 설정
# ===========================================
region = "KR"
site   = "public"

# ===========================================
# 프로젝트 설정
# ===========================================
project_name = "todo"
environment  = "dev"

# ===========================================
# 네트워크 설정
# ===========================================
vpc_cidr = "10.0.0.0/16"
zone     = "KR-1"

# ===========================================
# 서버 수량 (비용 절감 시 1로 변경)
# ===========================================
web_server_count = 2
was_server_count = 2

# ===========================================
# 데이터베이스 설정 (필수)
# ===========================================
db_name     = "tododb"
db_user     = "todouser"
db_password = "YOUR_SECURE_PASSWORD"  # 영문, 숫자, 특수문자 포함 8자 이상
